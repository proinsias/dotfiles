[General]
  snippetfile = "/Users/{{ .chezmoi.username }}/.config/pet/snippet.toml"
  editor = "emacsclient"
  column = 40
  selectcmd = "fzf --ansi"
  backend = "gist"
  sortby = ""

[Gist]
  file_name = "pet-snippet.toml"
  access_token = {{ onepasswordRead "op://Private/PET_GITHUB_ACCESS_TOKEN/credential" | quote }}
  gist_id = {{ onepasswordRead "op://Private/PET_GITHUB_ACCESS_TOKEN/gist" | quote }}
  public = false
  auto_sync = true

[GitLab]
  file_name = "pet-snippet.toml"
  access_token = ""
  url = ""
  id = ""
  visibility = "private"
  auto_sync = false
  skip_ssl = false
