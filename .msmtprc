# Begin msmtprc
# Set default values for all following accounts.
defaults
tls on
logfile ~/.msmtp.log

# A first gmail address
account fodonovan@insightsquared.com
host smtp.gmail.com
port 587
protocol smtp
auth on
from fodonovan@insightsquared.com
user fodonovan@insightsquared.com
tls on
tls_starttls on

# this next line is crucial: you have to point to the correct security
# certificate for GMail.
# If this doesn't work, check the mstmp documentation
# at http://msmtp.sourceforge.net/documentation.html for help
#
# This next line should all be on one long line:
#tls_trust_file "/Users/fodonovan/Dropbox/To Keep/Thawte Root Certificates/thawte Premium Server CA/Thawte Premium Server CA.pem"
tls_trust_file /usr/local/etc/openssl/cert.pem

# Set a default account
# You need to set a default account for Mail
account default : fodonovan@insightsquared.com

# end msmtprc
