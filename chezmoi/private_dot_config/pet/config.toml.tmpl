[General]
    snippetfile = "{{ .chezmoi.homeDir }}/.config/pet/snippet.toml"
    editor = "emacsclient"
    column = 40
    selectcmd = "fzf --ansi"
    backend = "gist"
    sortby = ""

[Gist]
    file_name = "pet-snippet.toml"
    {{- if .test }}
    access_token = "123"
    gist_id = "123"
    {{ else }}
    # Don't set. Then pet uses PET_GITHUB_ACCESS_TOKEN instead.
    # access_token =
    gist_id = {{ onepasswordRead "op://Private/pet/gist" | quote }}
    {{ end }}
    public = false
    auto_sync = true

[GitLab]
    file_name = "pet-snippet.toml"
    access_token = ""
    url = ""
    id = ""
    visibility = "private"
    auto_sync = false
    skip_ssl = false
