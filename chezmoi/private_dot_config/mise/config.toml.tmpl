# Don't put credentials or other secrets into this shared file!
# Global mise configuration
# Applies to all projects unless overridden locally.

[env]
# _.source = {path = "export-secrets.sh", redact = true }
# Then we can run, e.g., `op run -- pop`.

{{ if eq .chezmoi.arch "arm64" }}
DOCKER_DEFAULT_PLATFORM = "linux/amd64"
{{ else }}
DOCKER_DEFAULT_PLATFORM = "linux/x86_64"
{{ end }}

# Generate using:
# > mise set --age-encrypt --prompt ENV_VARIABLE --global

OPENAI_API_KEY = { age = {{ onepasswordRead "op://Private/OpenAI.com/api-key-age" | quote }} }
GROQ_API_KEY = { age = {{ onepasswordRead "op://Parents/Groq/token-age" | quote }} }
{{ if not .work}}
GH_TOKEN = { age = {{ onepasswordRead "op://Parents/github.com/gh-age" | quote }} }
{{ end }}
HOMEBREW_GITHUB_API_TOKEN = { age = {{ onepasswordRead "op://Parents/github.com/Tokens/homebrew-age" | quote }} }
LYCHEE_GITHUB_TOKEN = { age = {{ onepasswordRead "op://Parents/github.com/Tokens/lychee-age" | quote }} }
MISE_GITHUB_TOKEN = { age = {{ onepasswordRead "op://Parents/github.com/Tokens/mise-age" | quote }} }
OLLAMA_API_BASE = "http://127.0.0.1:11434"
{{ if eq .chezmoi.os "darwin" }}
OP_BIOMETRIC_UNLOCK_ENABLED = true
{{ end }}
PET_GITHUB_ACCESS_TOKEN = { age = {{ onepasswordRead "op://Parents/github.com/Tokens/pet-age" | quote }} }
POP_FROM = "onboarding@resend.dev"
POP_SIGNATURE = "Sent with [Pop](https://github.com/charmbracelet/pop)!"
# editorconfig-checker-disable-next-line
POP_TO = { age = "" }
PYTHONUNBUFFERED = "1"
RESEND_API_KEY = { age = {{ onepasswordRead "op://Parents/Resend/api-key-age" | quote }} }
SMTP_PASSWORD = { age = {{ onepasswordRead "op://Parents/tdwwygszbfb77bj7sbxzyjsxmq/icloudpd-age" | quote }} }
YOUTUBE_API_KEY = { age = {{ onepasswordRead "op://Private/Youtube Data API/token-age" | quote }} }

[hooks]
enter = "mise i -q"  # Install tools quietly on entering a directory.

[settings]
env_file = ".env"
experimental = true
gpg_verify = true
idiomatic_version_file_enable_tools = ["python"]
python.uv_venv_auto = true  # Use uv venv.
status.missing_tools = "always"
status.show_env = true
swift.gpg_verify = true

[tools]
age = "latest"
# go = "1.25"
op = "latest"
node = "25"
# python = "3.14"
usage = "latest"
