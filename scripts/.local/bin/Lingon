#!/usr/bin/env bash
# shellcheck disable=SC2312

# Intel homebrew
test -f /usr/local/bin/brew && SHELLENV="$(/usr/local/bin/brew shellenv)" && eval "${SHELLENV}"
# M1 home-brew. Do second in case we are also using Intel via Rosetta.
test -f /opt/homebrew/bin/brew && SHELLENV="$(/opt/homebrew/bin/brew shellenv)" && eval "${SHELLENV}"

host="$(hostname -s)"
export host
dt="$(gdate --iso-8601)"
export dt
HOMEBREW_PREFIX="$(brew --prefix)"
export HOMEBREW_PREFIX
RUBY_HOME="${HOMEBREW_PREFIX}/opt/ruby"
export RUBY_HOME
RUBY_VERSION="3.1.0"
export RUBY_VERSION
GEM_HOME="${RUBY_HOME}/lib/ruby/gems/${RUBY_VERSION}"
export GEM_HOME
GEM_PATH="${RUBY_HOME}/lib/ruby/gems/${RUBY_VERSION}"
export GEM_PATH
PATH="${HOME}/bin:${HOME}/.local/bin:/usr/local/google-cloud-sdk/bin:${RUBY_HOME}/bin${PATH:+:${PATH}}"
export PATH
DEBIAN_FRONTEND="noninteractive"
export DEBIAN_FRONTEND

if type apt-get >/dev/null 2>&1; then
    (
        echo -e "\apt-get update:"
        apt-get update --yes
        echo -e "\apt-get upgrade:"
        apt-get upgrade --yes
    ) 2>&1 | slackcat --channel francis --filename "apt-get_${host}_${dt}.txt"
fi

if type brew >/dev/null 2>&1; then
    echo -e "\nbrew update:"
    brew update
    echo -e "\nbrew upgrade:"
    brew upgrade
    echo -e "\nbrew cleanup:"
    brew cleanup
else
    echo -e "\nbrew not found!"
fi 2>&1 | slackcat --channel francis --filename "brew_${host}_${dt}.txt"

if type mas >/dev/null 2>&1; then
    (
        echo -e "\nmas upgrade:"
        mas upgrade
    ) 2>&1 | slackcat --channel francis --filename "mas_${host}_${dt}.txt"
fi

if type gem >/dev/null 2>&1; then
    echo -e "\ngem update --system:"
    gem update --system --no-document
    echo -e "\ngem update:"
    gem update --no-document
    echo -e "\ngem cleanup:"
    # shellcheck disable=SC2312
    yes n | gem cleanup
else
    echo -e "\ngem not found!"
fi 2>&1 | slackcat --channel francis --filename "gemupdate_${host}_${dt}.txt"

if type npm >/dev/null 2>&1; then
    echo -e "\nnpm update --location=global:"
    npm update --location=global
else
    echo -e "\nnpm not found!"
fi 2>&1 | slackcat --channel francis --filename "npm_${host}_${dt}.txt"

if type pipx >/dev/null 2>&1; then
    echo -e "\npipx upgrade-all:"
    pipx upgrade-all 2>&1 | grep -v "upgrading "
else
    echo -e "\npipx not found!"
fi 2>&1 | slackcat --channel francis --filename "pipx_${host}_${dt}.txt"

if type pre-commit-autoupdate >/dev/null 2>&1; then
    echo -e "\npre-commit-autoupdate:"
    pre-commit-autoupdate
else
    echo -e "\npre-commit-autoupdate not found!"
fi 2>&1 | slackcat --channel francis --filename "pre-commit-autoupdate_${host}_${dt}.txt"

if type ~/favs/gh/dotfiles/bin/stow.sh >/dev/null 2>&1; then
    (
        echo -e "\n~/favs/gh/dotfiles/bin/stow.sh:"
        ~/favs/gh/dotfiles/bin/stow.sh
    ) 2>&1 | slackcat --channel francis --filename "stow_${host}_${dt}.txt"
fi

if type tldr >/dev/null 2>&1; then
    (
        echo -e "\ntldr --update:"
        tldr --update
    ) 2>&1 | slackcat --channel francis --filename "tldr_${host}_${dt}.txt"
fi

if type pyenv >/dev/null 2>&1; then
    # Need to run this after upgrading pyenv via brew.
    echo -e "\npyenv rehash:"
    pyenv rehash
else
    echo -e "\npyenv not found!"
fi 2>&1 | slackcat --channel francis --filename "pyenv_${host}_${dt}.txt"

if type uncommitted-francis >/dev/null 2>&1; then
    echo -e "\nuncommitted-francis:"
    uncommitted-francis "${HOME}"
else
    echo -e "\nuncommitted-francis not found!"
fi 2>&1 | slackcat --channel francis --filename "uncommitted_${host}_${dt}.txt"

if type build-docker >/dev/null 2>&1; then
    build-docker 2>&1 | slackcat --channel francis --filename "build-docker_${host}_${dt}.txt"
fi

if type docker-cleanup >/dev/null 2>&1; then
    docker-cleanup 2>&1 | slackcat --channel francis --filename "docker-cleanup_${host}_${dt}.txt"
fi

if type apt-get >/dev/null 2>&1; then
    apt list --upgradeable 2>&1 | slackcat --channel francis --filename "apt_upgradeable_${host}_${dt}.txt"
fi

if type brew >/dev/null 2>&1; then
    brew outdated
else
    echo -e "\nbrew not found!"
fi 2>&1 | slackcat --channel francis --filename "brew_outdated_${host}_${dt}.txt"

if type mas >/dev/null 2>&1; then
    (
        echo -e "\nmas outdated:"
        mas outdated
    ) 2>&1 | slackcat --channel francis --filename "mas_outdated_${host}_${dt}.txt"
fi

if type gcloud >/dev/null 2>&1; then
    (
        echo -e "\ngcloud components list 2>&1 | grep \"Update Available\":"
        # shellcheck disable=SC2312
        gcloud components list 2>&1 | grep "Update Available"
        # To upgrade, run: `sudo gcloud components update --quiet`.
    ) 2>&1 | slackcat --channel francis --filename "gcloud_outdated_${host}_${dt}.txt"
fi
